---
import BoxerBigImage from "@/components/BoxerBigImage.astro"
import BoxerDetailInfo from "@/components/BoxerDetailInfo.astro"
import { BOXERS } from "@/consts/boxers"
import Layout from "@/layouts/Layout.astro"

export function getStaticPaths() {
	return BOXERS.map(({ id }) => ({
		params: { id },
	}))
}

const { id } = Astro.params

const [boxer] = BOXERS.filter((boxer) => boxer.id === id)
---

<Layout
	description={`Información del luchador ${boxer.name}`}
	title={`${boxer.name} - Información del boxeador de La Velada IV`}
>
	<main>
		<section class="flex flex-col items-center">
			<div class="flex flex-col items-center lg:flex-row lg:items-start">
				<div class="lg:w-1/4">
					<div class="mb-10">
						<BoxerDetailInfo title="Alias" value={boxer.name} />
					</div>
					<div class="mb-10">
						<BoxerDetailInfo title="País" value={boxer.country} />
					</div>
					<div class="mb-10">
						<BoxerDetailInfo title="Edad" value={boxer.age} />
					</div>
					<div class="mb-10">
						<BoxerDetailInfo title="Rival/es" value={[...boxer.versus]} />
					</div>
				</div>
				<div class="lg:mx-4 lg:w-1/2">
					<BoxerBigImage id={id} name={boxer.name} country={boxer.country} />
				</div>
				<div class="lg:w-1/4">
					<div class="mb-10">
						<BoxerDetailInfo title="Peso" value={boxer.weight} />
					</div>
					<div class="mb-10">
						<BoxerDetailInfo title="Altura" value={boxer.height} />
					</div>
					<div class="mb-10">
						<BoxerDetailInfo title="Guardia" value={boxer.guard || ""} />
					</div>
					<div class="mb-10">
						<BoxerDetailInfo title="Alcance" value={boxer.reach || ""} />
					</div>
				</div>
			</div>

			<div class="mt-4 flex justify-center space-x-4">
				{
					boxer.socials.twitch && (
						<a
							href={boxer.socials.twitch}
							target="_blank"
							rel="noopener noreferrer"
							class="w-32 bg-gradient-to-b from-gray-900 to-transparent px-10 py-2 mix-blend-screen"
						>
							<img src="/img/social/twitch.png" alt="Twitch" />
						</a>
					)
				}
				{
					boxer.socials.instagram && (
						<a
							href={boxer.socials.instagram}
							target="_blank"
							rel="noopener noreferrer"
							class="w-32 bg-gradient-to-b from-gray-900 to-transparent px-10 py-2 mix-blend-screen"
						>
							<img src="/img/social/instagram.png" alt="Instagram" />
						</a>
					)
				}
				{
					boxer.socials.twitter && (
						<a
							href={boxer.socials.twitter}
							target="_blank"
							rel="noopener noreferrer"
							class="w-32 bg-gradient-to-b from-gray-900 to-transparent px-10 py-2 mix-blend-screen"
						>
							<img src="/img/social/twitter.png" alt="Twitter" />
						</a>
					)
				}
				{
					boxer.socials.youtube && (
						<a
							href={boxer.socials.youtube}
							target="_blank"
							rel="noopener noreferrer"
							class="w-32 bg-gradient-to-b from-gray-900 to-transparent px-10 py-2 mix-blend-screen"
						>
							<img src="/img/social/youtube.png" alt="YouTube" />
						</a>
					)
				}
				{
					boxer.socials.tiktok && (
						<a
							href={boxer.socials.tiktok}
							target="_blank"
							rel="noopener noreferrer"
							class="w-32 bg-gradient-to-b from-gray-900 to-transparent px-10 py-2 mix-blend-screen"
						>
							<img src="/img/social/tiktok.png" alt="TikTok" />
						</a>
					)
				}
			</div>
		</section>
	</main>
</Layout>
